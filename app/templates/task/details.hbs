<div class="ui fluid card">
  <div class="content">
    <div class="header">{{model.task.title}}</div>
    <div class="ui checkbox">
      <input type="checkbox" name="task-isCompleted" checked={{model.task.isCompleted}}
       {{action "markTask" on="change"}}>
      <label>Completed?</label>
    </div>
  </div>
  <div class="content">
    <div class="ui feed">
      <div class="event">
        <div class="content">
          <div class="summary">
            <table class="ui fixed single line celled table">
              <thead>
                <tr>
                  <th>Comment</th>
                  <th>Effort</th>
                </tr>
              </thead>
              <tbody>
                {{#each model.task.history as |hist|}}
                  <tr>
                    <td>
                      {{hist.comment}}
                    </td>
                    <td>{{hist.humanizeEffort}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="extra content">
    <button class="ui button" {{action 'createTask'}}>Add Effort</button>
  </div>
</div>
